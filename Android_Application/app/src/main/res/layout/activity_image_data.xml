<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    tools:context=".ImageDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textFontWeight="500"
            android:layout_height="match_parent"
            android:text="Choose Image Category:"
            android:textSize="22sp"/>
        <Spinner
            android:layout_weight="4"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/directory"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Captured Image"
        android:fontFamily="sans-serif-condensed-medium"
        android:textFontWeight="700"
        android:textAlignment="center"
        android:fontWeight="400"
        android:background="#74b72e"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/image_view2"
        android:layout_width="393dp"
        android:layout_height="480dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ip_address"
            android:layout_width="200dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textFontWeight="400"
            android:layout_height="match_parent"
            android:text="192.168.0.101"
            android:textSize="22sp"/>
        <EditText
            android:id="@+id/port_number"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textFontWeight="400"
            android:layout_height="match_parent"
            android:text="5001"
            android:textSize="22sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_upload_img"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Upload Image" />

    <TextView
        android:layout_width="380dp"
        android:background="@color/cardview_shadow_start_color"
        android:layout_height="wrap_content"
        android:height="35dp"
        android:paddingLeft="15dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textFontWeight="600"
        android:text="Message from the Server ..."
        android:textSize="20sp"
        android:id="@+id/responseText" />

</LinearLayout>